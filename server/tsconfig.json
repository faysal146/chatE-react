{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
